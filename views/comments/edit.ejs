<% include ../partials/header %>

<div class="container px-auto">
    <h1 style = "text-align: center">Edit your comment!</h1>   
    <div class = "row mt-4">
        <div class = "col-4"></div>
        <div class = "col-4">
            <form action = "/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input type="text" class="form-control" name = "comment[text]" value="<%= comment.text %>">
                </div>                
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href = "/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
        <div class = "col-4"></div>
    </div>
</div>


<% include ../partials/footer %>

