<% include ../partials/header %>

<div class="container px-auto">
    <h1 style = "text-align: center">Edit the campground!</h1>   
    <div class = "row mt-4">
        <div class = "col-4"></div>
        <div class = "col-4">
            <form action = "/campgrounds/<%= campgrounds._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <!--<label for="campname">New Camp</label>-->
                    <input type="text" class="form-control" name = "Camp[name]" value = "<%= campgrounds.name %>">
                </div>
                <div class="form-group">
                    <!--<label for="camplink">URL of Image</label>-->
                    <input type="text" class="form-control" name = "Camp[image]"  value = "<%= campgrounds.image %>" >
                </div>
                <div class="form-group">
                    <!--<label for="camplink">Price</label>-->
                    <input type="number" min = "0.01" step = "0.01" class="form-control" name = "Camp[price]" value ="<%= campgrounds.price %>">                
                <div class="form-group">
                    <!--<label for="campdescription">Description</label>-->
                    <input type="text" class="form-control" name = "Camp[description]" value = "<%= campgrounds.description %>" >
                </div>                
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>
        <div class = "col-4"></div>
    </div>
</div>


<% include ../partials/footer %>

