<% include ../partials/header %>

<div class="container px-auto">
    <h1 style = "text-align: center">Creat a new campground!</h1>   
    <div class = "row mt-4">
        <div class = "col-4"></div>
        <div class = "col-4">
            <form action = "/campgrounds" method = "POST">
                <div class="form-group">
                    <!--<label for="campname">New Camp</label>-->
                    <input type="text" class="form-control" name = "newCamp" id ="campname" placeholder = "Name of Camp">
                </div>
                <div class="form-group">
                    <!--<label for="camplink">URL of Image</label>-->
                    <input type="text" class="form-control" name = "newImg" id="camplink" placeholder="URL of the Camp Image">
                </div>
                <div class="form-group">
                    <!--<label for="camplink">URL of Image</label>-->
                    <input type="number" min = "0.01" step = "0.01" class="form-control" name = "newPrice" id="camplink" placeholder="Price">
                </div>
                <div class="form-group">
                    <!--<label for="campdescription">Description</label>-->
                    <input type="text" class="form-control" name = "newDes" id="camptext" placeholder="Description of the Camp">
                </div>                
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>
        <div class = "col-4"></div>
    </div>
</div>


<% include ../partials/footer %>

